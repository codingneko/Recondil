{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "jsx": "react",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "skipLibCheck": true,
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./build",
        "./src/tests",
        "./node_modules",
        "webpack.*"
    ],
    "lib": [
        "es6"
    ]
}
